  <body>
    <div class="layout">
      <%- include('../layout/header', {}); %>
      <section class="main">
        <main class="centered">
          <h1>Ajout d'un article</h1>
          <form action="/articles/action/add" method="POST">
            <label>
              <div>Nom</div>
              <input type="text" placeholder="Ex: Tournevis" name="name" />
            </label>
            <label>
              <div>Prix</div>
              <input type="number" name="price" />
            </label>
            <label>
              <div>Quantit√©</div>
              <input type="number" name="qty" />
            </label>
            <button>Ajouter</button>
          </form>
        </main>
      </section>
      <%- include('../layout/footer', {}); %>
    </div>
  </body>
</html>
